&qupv3_hub_i2c4 {
    status = "ok";

	#address-cells = <1>;
	#size-cells = <0>;
	
	tfa98xx@35 {
		compatible = "tfa,tfa98xx";
		status = "ok";
		reg = <0x35>;
		reset-gpio = <&tlmm 123 0x00>;
		irq-gpio = <&tlmm 124 0x00>;
		reset-polarity = <1>;
		is-primary = <0>;
	};

	tfa98xx@34 {
		compatible = "tfa,tfa98xx";
		status = "ok";
		reg = <0x34>;
		reset-gpio = <&tlmm 121 0x00>;
		irq-gpio = <&tlmm 122 0x00>;
		reset-polarity = <1>;
		is-primary = <1>;
	};
};